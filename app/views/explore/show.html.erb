<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Dish #<%= @dish.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
<!--               <dt>Host</dt>
              <dd><%= @dish.profile_id %></dd>

 -->
              <dt>Dish name</dt>
              <dd><%= @dish.dish_name %></dd>

              <dt></dt>
              <dd><img src="<%= @dish.photo %>" width="100%" height="100%"></dd>

              <dt>Cuisine type</dt>
              <dd><%= @dish.cuisine_type %></dd>

              <dt>Dish description</dt>
              <dd><%= @dish.dish_description %></dd>

              <dt>Ingredients</dt>
              <dd><%= @dish.ingredients %></dd>

              <dt>Date offered</dt>
              <dd><%= @dish.date_offered.strftime('%B %e, %Y at %l:%M%P %Z') %></dd>

              <dt>Max guests</dt>
              <dd><%= @dish.max_guests %></dd>

              <dt>Number guests left</dt>
              <dd><%= @dish.number_guests_left %></dd>

              <dt>Price offered</dt>
              <dd><%= number_to_currency(@dish.price_offered, :unit => "$") %></dd>  

              <dt>Location</dt>
              <dd><%= @dish.location %></dd>

              <dt>Posted</dt>
              <dd><%= time_ago_in_words(@dish.date_offered) %> ago</dd>

            </dl>

            <div class="btn-group">
              <a href="#" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              Number of orders
                <span class="caret"></span>
              </a>


              <ul class="dropdown-menu">
              <% @dish.max_guests.times do %>
              <li><a href="#">Dropdown link</a></li>         
                <% end %>
                </ul> 
            </div>            


            <a href="/dishes/add/<%= @dish.id %>" class="btn btn-success btn-group btn-group-justified col-md-6">Reserve</a>
            <br/>

          </dl>
          <div class="btn-group btn-group-justified">
            <a href="/explore" class="btn btn-primary">
              <i class="fa fa-chevron-left"></i>
            </a>



          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<!-- End responsive panel example -->
