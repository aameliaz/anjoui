<div class="page-header">
  <h1>
    Available Dishes
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Dishes (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @dishes.each do |dish| %>
<% if dish.profile_id != current_user.id %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Dish #<%= dish.id %></h3>
      </div>
      <div class="panel-body">
        <dl>

          <dt>Dish name</dt>
          <dd><%= dish.dish_name %></dd>

          <dt></dt>
          <dd><img src="<%= dish.photo %>" width="100%" height="100%"></dd>

          <dt>Cuisine type</dt>
          <dd><%= dish.cuisine_type %></dd>


<!--           <dt>Dish description</dt>
          <dd><%= dish.dish_description %></dd>

          <dt>Ingredients</dt>
          <dd><%= dish.ingredients %></dd> -->

          <dt>Date offered</dt>
          <dd><%= dish.date_offered.strftime('%B %e, %Y at %l:%M%P %Z') %></dd>

<!--           <dt>Max guests</dt>
          <dd><%= dish.max_guests %></dd>

          <dt>Number guests left</dt>
          <dd><%= dish.number_guests_left %></dd> -->

          <dt>Price offered</dt>
          <dd><%= number_to_currency(dish.price_offered, :unit => "$") %></dd>    

          <dt>Location</dt>
          <dd><%= dish.location %></dd>

 <!--          <dt>Posted</dt>
          <dd><%= time_ago_in_words(dish.date_offered) %> ago</dd> -->

        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/explore/<%= dish.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>

        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
</div>

<!-- You can ignore the following. It's a quick and dirty example of how to get a Pinterest-style layout with quick search. -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
