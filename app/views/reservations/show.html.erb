<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Reservation #<%= @reservation.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">


<!--           <dt>Profile</dt>
          <dd><%= @reservation.profile %></dd> -->
          <dt>Dish name</dt>
          <dd><%= @reservation.dish.dish_name %></dd>

          <dt>Photo</dt>
          <dd><img src="<%= @reservation.dish.photo %>" width="100%" height="100%"></dd>
          
          <dt>Cuisine</dt>
          <dd><%= @reservation.dish.cuisine_type %></dd>

          <dt>Dish description</dt>
          <dd><%= @reservation.dish.dish_description %></dd>
          
          <dt>Ingredients</dt>
          <dd><%= @reservation.dish.ingredients %></dd>
          
          <dt>Price</dt>
          <dd><%= number_to_currency(@reservation.dish.price_offered, :unit => "$") %></dd>   

          <dt>Date</dt>
          <dd><%= @reservation.dish.date_offered.strftime('%B %e, %Y at %l:%M%P %Z') %></dd>

          <dt>Number of Guests</dt>
          <dd><%= @reservation.dish.max_guests - 1 %></dd>

          <dt>Location</dt>
          <dd><%= @reservation.dish.location %></dd>


            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/reservations" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/reservations/<%= @reservation.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_reservation/<%= @reservation.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
         
            </div>
            <br/>
            <a href="/reservations/new" class="btn btn-success btn-lg btn-block">Review</a>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
